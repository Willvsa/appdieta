        <TextField fx:id="NombreUsuarioReg" layoutX="300.0" layoutY="160.0" />
        <!--Field Del Correo Electronico -->
        <TextField fx:id="CorreoElectronicoReg" layoutX="300.0" layoutY="200.0" />
        <!--Field De La Contraseña -->
        <PasswordField fx:id="PassReg" layoutX="300.0" layoutY="246.0" />
        <!--Boton Para Volver Atras -->
        <Button layoutX="43.0" layoutY="342.0" mnemonicParsing="false" onAction="#Goatras" text="Volver Al Loggin" />
        <!--Boton Para Hacer El Registro -->
        <Button layoutX="486.0" layoutY="342.0" mnemonicParsing="false" onAction="#RegisterButtonPress" text="Registrarse" />
        <Label layoutX="220.0" layoutY="49.0" text="Registrate">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <Label fx:id="ErrorCorreo" layoutX="462.0" layoutY="199.0" prefHeight="25.0" prefWidth="124.0" />
    </children>
</AnchorPane>
